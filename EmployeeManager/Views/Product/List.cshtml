@model IEnumerable<ProductViewModel>

<h1>Product</h1>

<table class="table-bordered">
    <thead>
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>Description</td>
            <td>Category</td>
        </tr>
    </thead>
    <tbody>
        @foreach(ProductViewModel product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>@product.Category</td>
            </tr>
        }
    </tbody>
</table>